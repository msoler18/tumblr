<% if @post.errors.any?  %>
  <div id="errors">
    <h2><%= pluralize(@post.errors.count, "error") %> stopped this post from saving.</h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1><%= title_form  %></h1>
<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  
  <p>
    <%= f.label :content  %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>  
<% end %>  